{% include('parts/header.html.twig') %}

<div class="mt-6 lg:flex-1 max-w-full">
  <h1 class="mb-6 text-3xl foot-medium font-display">Files</h1>

  <p>This is an overview of the project metrics as a whole. This list gives you a quick glimpse on
    what is going on in your project.</p>

  <div class="relative overflow-x-auto">
    <table class="sortable my-6 w-full border-collapse border border-slate-500 text-sm" data-currentsort="0:asc:string">
      <thead class="bg-cyan-950/25">
        <tr>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="string">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">File</span>
              <span class="sort-icon transition-all"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">Loc</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">LLoc</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">CLoc</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">HTML&nbsp;loc</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">Cyclom.&nbsp;Compl.</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">Maintainability</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">Difficulty</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">Effort</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
          <th class="border border-slate-500 text-left px-2 py-0.5" data-sortable="number">
            <span class="label-box flex justify-between items-center gap-1">
              <span class="label-name">Compl.&nbsp;density</span>
              <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd" /></svg></span>
            </span>
          </th>
        </tr>
      </thead>
      <tbody>
        {% for file in files %}
          <tr class="even:bg-cyan-950/45 odd:bg-cyan-950/85">
            <td class="border border-slate-500 text-left px-2 py-0.5" data-sort="{{ file.dirName }}/{{ file.fileName }}">
              <span class="text-white/40">{{ file.dirName }}/</span><br><span class="font-semibold inline-block" title="{{ file.dirName }}/{{ file.fileName }}">{{ file.fileName }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.loc }}">
              <span class="inline-block px-1.5 py-0.5{% if file.predictionTooLong %} rounded-md bg-yellow-700{% endif %}">{{ file.loc }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.lloc }}">
              <span class="inline-block px-1.5 py-0.5{% if file.predictionTooLong %} rounded-md bg-yellow-700{% endif %}">{{ file.lloc }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.cloc }}">
              <span class="inline-block px-1.5 py-0.5{% if file.cloc == 0 %} rounded-md bg-yellow-700{% endif %}">{{ file.cloc }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.htmlLoc }}">
              <span class="inline-block px-1.5 py-0.5{% if file.predictionTooMuchHtml == true %} rounded-md bg-yellow-700{% endif %}">{{ file.htmlLoc }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.cc }}">
              <span class="inline-block px-1.5 py-0.5{% if file.predictionTooComplex %} rounded-md bg-red-900{% endif %}">{{ file.cc }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.maintainabilityIndex }}">
              <span class="inline-block px-1.5 py-0.5">{{ file.maintainabilityIndex|number_format(2) }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.difficulty }}">
              <span class="inline-block px-1.5 py-0.5">{{ file.difficulty|number_format(2) }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.effort }}">
              <span class="inline-block px-1.5 py-0.5">{{ file.effort|number_format(2) }}</span>
            </td>
            <td class="border border-slate-500 text-right px-2 py-0.5" data-sort="{{ file.complexityDensity }}">
              <span class="inline-block px-1.5 py-0.5">{{ file.complexityDensity|number_format(2) }}</span>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% include('parts/footer.html.twig') %}