<h3 class="mt-8 mb-5 text-2xl font-semibold font-display">Classes</h3>

<div class="filters mb-4 flex justify-end">
  <div>
    <label><input type="text" name="filter" class="namefilter text-black rounded px-2 py-0.5" placeholder="Search class name"></label>
    <button class="button-reset">Reset</button>
  </div>
</div>

<div class="relative overflow-x-auto">
  <table class="sortable asc w-full border-collapse border border-slate-500 text-sm rounded-xl transition-opacity" data-currentsort="0:asc:string">
    <thead class="bg-cyan-950/25">
    <tr>
      <th class="border border-slate-500 text-left px-2 py-0.5 cursor-pointer" data-sortable="string">
          <span class="label-box flex justify-between items-center gap-1">
            <span class="label-name">Name</span>
            <span class="sort-icon transition-all opacity-0"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M12.53 16.28a.75.75 0 0 1-1.06 0l-7.5-7.5a.75.75 0 0 1 1.06-1.06L12 14.69l6.97-6.97a.75.75 0 1 1 1.06 1.06l-7.5 7.5Z" clip-rule="evenodd"></path></svg></span>
          </span>
      </th>
      {% for header in tableHeaders %}
        {% include('@Parts/thead-th-sortable.html.twig') %}
      {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for class in classes %}
      <tr class="even:bg-cyan-950/45 odd:bg-cyan-950/85 transition-colors hover:bg-cyan-800">
        <td class="border border-slate-500 text-left px-2 py-0.5 filter-name" data-filter="{{ class.get('singleName') }}" data-sort="{{ class.get('singleName') }}">
          <div class="flex gap-4 justify-between items-start">
            <a href="{% if isSubdir %}../{% endif %}classes/{{ class.getIdentifier }}.html" class="group block flex-1">
              {% if class.get('anonymous').getValue() %}
                <span class="text-white/40 group-hover:text-white">{{ class.get('filePath') }}</span><br>
                <span class="font-semibold inline-block group-hover:text-cyan-400" title="{{ class.getName() }}">{{ class.getName() }}</span>
              {% else %}
                {% if class.get('namespace').getValue() %}<span class="text-white/40 group-hover:text-white">{{ class.get('namespace') }}</span><br>{% endif %}
                {% if not class.get('namespace').getValue() %}<span class="text-white/40 group-hover:text-white">{% set pathToReplace = { (commonPath): '' } %}{{ class.getPath()|replace(pathToReplace) }}</span><br>{% endif %}
                <span class="font-semibold inline-block group-hover:text-cyan-400" title="{{ class.getName() }}">{{ class.get('singleName') }}</span>
              {% endif %}
            </a>
            {% if class.interface.getValue() %}
              <div class="rounded px-2 py-0.5 bg-amber-900 mt-0.5">Interface</div>
            {% elseif class.trait.getValue() %}
              <div class="rounded px-2 py-0.5 bg-purple-900 mt-0.5">Trait</div>
            {% elseif class.enum.getValue() %}
              <div class="rounded px-2 py-0.5 bg-emerald-900 mt-0.5">Enum</div>
            {% elseif class.abstract.getValue() %}
              <div class="rounded px-2 py-0.5 bg-fuchsia-900 mt-0.5">Abstract</div>
            {% elseif class.anonymous.getValue() %}
              <div class="rounded px-2 py-0.5 bg-gray-800 mt-0.5">Anonymous</div>
            {% else %}
              <div class="rounded px-2 py-0.5 bg-blue-900 mt-0.5">Class</div>
            {% endif %}
          </div>
        </td>
        {% for metricKey in listMetricKeys %}
          {% set data = class.get(metricKey) %}
          {% include('@Parts/tbody-td-sortable.html.twig') %}
        {% endfor %}
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>